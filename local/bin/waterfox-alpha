#! /bin/sh

if [[ $(hostname) == 'freya' ]]; then
	bspc rule -a 'Waterfox Alpha' -o desktop='Primary:^1' state=tiled
	bspc rule -a 'Waterfox Alpha' -o desktop='East:^3' state=tiled
	/usr/bin/waterfox-alpha
else
	bspc rule -a 'Waterfox Alpha' -o desktop='Primary:^1' state=tiled
	/usr/bin/waterfox-alpha
fi
