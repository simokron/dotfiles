#! /bin/sh

case $(hostname) in
	"freja")
		APPS=("dropbox" "vivaldi-stable" "spotify" "telegram-desktop" "qbittorrent")
		;;
	"TUE009888")
		APPS=("vivaldi-stable" "spotify" "telegram-desktop" "owncloud" "dropbox" "stalonetray")
		;;
esac

PS=$(ps -ax)

for app in ${APPS[@]}; do
	if [[ ! $(echo "$PS" | grep "$app") ]]; then
		echo "launching $app"
		eval "$app &"
		if [[ $(hostname) == "TUE009888" ]] && [[ $app == "dropbox" ]]; then
			sleep 20
		fi
	else
		echo "$app already running"
	fi
done
