#! /bin/sh

case $(hostname) in
	"freja")
		APPS=("dropbox" "waterfox-current" "spotify" "telegram-desktop" "qbittorrent" "SVPManager")
		;;
	"gefjon")
		APPS=("dropbox" "waterfox-current" "telegram-desktop")
		;;
	"TUE018341")
		APPS=("dropbox" "waterfox-current" "spotify" "telegram-desktop")
		;;
esac

PS=$(ps -ax)

for app in ${APPS[@]}; do
	if [[ ! $(echo "$PS" | grep "$app") ]]; then
		echo "launching $app"
		eval "$app &"
	else
		echo "$app already running"
	fi
done
